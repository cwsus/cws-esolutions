<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="audit-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-audit.log" />
        <param name="DatePattern" value=".yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="INFO" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>
    <appender name="info-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-info.log" />
        <param name="DatePattern" value=".yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="INFO" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>
    <appender name="warn-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-warn.log" />
        <param name="DatePattern" value=".yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="WARN" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>
    <appender name="error-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-error.log" />
        <param name="DatePattern" value=".yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
    </appender>
    <appender name="fatal-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-fatal.log" />
        <param name="DatePattern" value=".yy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="FATAL" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>
    <appender name="debug-logger" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="/var/tmp/SecurityService-debug.log" />
        <param name="DatePattern" value=".yyyy-MM-dd" />
        <param name="Threshold" value="DEBUG" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[Time: %d{dd MMM yyyy HH:mm:ss,SSS}][Thread:%t][Log: %c][Level: %-5p] - [File: %F:%L] - %m %n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelMatchFilter">
            <param name="LevelToMatch" value="DEBUG" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
        <filter class="org.apache.log4j.varia.DenyAllFilter" />
    </appender>

    <category name="AUDIT_RECORDER.com.cws.esolutions.security.service" additivity="false">
        <priority value="AUDIT" />
        <appender-ref ref="audit-logger" />
    </category>
    <category name="WARNING_RECORDER.com.cws.esolutions.security.service" additivity="false">
        <priority value="WARN" />
        <appender-ref ref="warn-logger" />
    </category>
    <category name="INFO_RECORDER.com.cws.esolutions.security.service" additivity="false">
        <priority value="INFO" />
        <appender-ref ref="info-logger" />
    </category>
    <category name="ERROR_RECORDER.com.cws.esolutions.security.service" additivity="false">
        <priority value="ERROR" />
        <appender-ref ref="error-logger" />
    </category>
    <category name="FATAL_RECORDER.com.cws.esolutions.security.service" additivity="false">
        <priority value="FATAL" />
        <appender-ref ref="fatal-logger" />
    </category>
    <category name="SECURITY_DEBUGGER" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="debug-logger" />
    </category>
</log4j:configuration>
